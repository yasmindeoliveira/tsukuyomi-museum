@model AdminView

<div class="container">

    <form asp-controller="Admin" asp-action="ResupplyProduct" method="post" class="title-card py-4 px-4">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Giorno:</label>
            <input asp-for="supply.Day" type="text" class="form-control"/>
            <span asp-validation-for="supply.Day" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Quantità:</label>
            <input asp-for="supply.Quantity" type="text" class="form-control" />
            <span asp-validation-for="supply.Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Fornitore:</label>
            <textarea asp-for="supply.Supplier" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="supply.Supplier" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Totale:</label>
            <input asp-for="supply.Total" type="text" class="form-control"/>
            <span asp-validation-for="supply.Total" class="text-danger"></span>
        </div>

        <div>
            <select asp-for="supply.ProductId" rows="10" class="d-block mb-3">
                    <option value=""></option>

                @foreach (Product product in Model.products)
                {
                                <option value="@product.ProductId">@product.Name</option>

                }

            </select>
            <span asp-validation-for="supply.ProductId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info">Salva</button>
    </form>

</div>