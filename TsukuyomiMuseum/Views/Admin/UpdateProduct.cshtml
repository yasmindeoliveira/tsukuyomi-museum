@model AdminView

<div class="container">

    <form asp-controller="Admin" asp-action="UpdateProduct" method="post" class="title-card py-4 px-4">
        @Html.AntiForgeryToken()

        <input asp-for="product.ProductId" type="hidden"/>

        <div class="mb-3">
            <label>Nome:</label>
            <input asp-for="product.Name" type="text" class="form-control"/>
            <span asp-validation-for="product.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="product.Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="product.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>URL Foto:</label>
            <input asp-for="product.PhotoUrl" type="text" class="form-control"/>
            <span asp-validation-for="product.PhotoUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Prezzo:</label>
            <input asp-for="product.Price" type="text" class="form-control" />
            <span asp-validation-for="product.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Quantità:</label>
            <input asp-for="product.Quantity" type="text" class="form-control" />
            <span asp-validation-for="product.Quantity" class="text-danger"></span>
        </div>

        <div>
            <select asp-for="product.CategoryId" rows="10" class="d-block mb-3">
                    <option value=""></option>

                @foreach (Category categoria in Model.categories)
                {
                                <option value="@categoria.CategoryId">@categoria.Name</option>

                }

            </select>
            <span asp-validation-for="product.CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info">Salva</button>
    </form>

</div>


