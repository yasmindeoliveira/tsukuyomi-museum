@model Publication

<div class="container">

    <form asp-controller="Admin" asp-action="CreatePublication" method="post" class="title-card py-4 px-4">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Titolo:</label>
            <input asp-for="Title" type="text" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>URL Foto:</label>
            <input asp-for="PhotoUrl" type="text" class="form-control"/>
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info">Salva</button>
    </form>

</div>